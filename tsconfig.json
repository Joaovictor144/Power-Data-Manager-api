{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],                                       
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@infra/*": ["./src/infra/*"],
      "@modules/*": ["./src/modules/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  }
}

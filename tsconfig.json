{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],                                       
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@infra/*": ["infra/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"]
    },
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
  }
}
